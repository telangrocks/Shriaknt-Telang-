<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/brand_surface"
    android:padding="24dp">

    <!-- CRYPTOPULSE Header Button -->
    <Button
        android:id="@+id/headerButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:background="@drawable/bg_header_pill"
        android:paddingStart="24dp"
        android:paddingEnd="24dp"
        android:paddingTop="8dp"
        android:paddingBottom="8dp"
        android:text="@string/app_name"
        android:textAllCaps="true"
        android:textColor="@color/brand_on_surface"
        android:textSize="12sp"
        android:textStyle="bold"
        android:letterSpacing="0.035"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="CRYPTOPULSE" />

    <!-- Title -->
    <TextView
        android:id="@+id/titleText"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:gravity="center"
        android:text="@string/auth_email_heading"
        android:textColor="@color/brand_on_surface"
        android:textSize="32sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/headerButton" />

    <!-- Subtitle -->
    <TextView
        android:id="@+id/subtitleText"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:gravity="center"
        android:text="@string/auth_email_subheading"
        android:textColor="@color/brand_on_surface"
        android:textSize="14sp"
        android:letterSpacing="0.045"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/titleText" />

    <!-- Main Card -->
    <androidx.cardview.widget.CardView
        android:id="@+id/mainCard"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:cardBackgroundColor="@color/brand_surface_variant"
        android:cardElevation="0dp"
        android:radius="28dp"
        app:cardCornerRadius="28dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/subtitleText">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="40dp">

            <!-- Security Info Section -->
            <LinearLayout
                android:id="@+id/securitySection"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="24dp"
                android:background="@drawable/bg_security_section"
                android:gravity="center_vertical"
                android:layout_marginBottom="32dp">

                <ImageView
                    android:id="@+id/shieldIcon"
                    android:layout_width="52dp"
                    android:layout_height="52dp"
                    android:src="@drawable/ic_shield_check"
                    android:contentDescription="@string/auth_security_title"
                    app:tint="@color/brand_primary" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:layout_marginStart="16dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/auth_security_title"
                        android:textColor="@color/brand_on_surface"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:text="@string/auth_security_description"
                        android:textColor="@color/brand_on_surface"
                        android:textSize="14sp"
                        android:alpha="0.8" />
                </LinearLayout>
            </LinearLayout>

            <!-- Email Input Section -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginBottom="24dp">

                <TextView
                    android:id="@+id/emailLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/auth_email_label"
                    android:textColor="@color/brand_on_surface"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:textAllCaps="true"
                    android:letterSpacing="0.05" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:background="@drawable/bg_phone_input"
                    android:padding="16dp"
                    android:layout_marginTop="12dp">

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@android:drawable/ic_dialog_email"
                        android:contentDescription="@string/auth_email_label"
                        app:tint="@color/brand_primary"
                        android:layout_marginEnd="12dp" />

                    <EditText
                        android:id="@+id/etEmail"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@android:color/transparent"
                        android:hint="@string/auth_email_hint"
                        android:inputType="textEmailAddress"
                        android:textColor="@color/brand_on_surface"
                        android:textColorHint="@color/brand_on_surface"
                        android:textSize="16sp"
                        android:padding="0dp" />
                </LinearLayout>
            </LinearLayout>

            <!-- Password Input Section -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginBottom="24dp">

                <TextView
                    android:id="@+id/passwordLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/auth_password_label"
                    android:textColor="@color/brand_on_surface"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:textAllCaps="true"
                    android:letterSpacing="0.05" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:background="@drawable/bg_phone_input"
                    android:padding="16dp"
                    android:layout_marginTop="12dp">

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@android:drawable/ic_lock"
                        android:contentDescription="@string/auth_password_label"
                        app:tint="@color/brand_primary"
                        android:layout_marginEnd="12dp" />

                    <EditText
                        android:id="@+id/etPassword"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@android:color/transparent"
                        android:hint="@string/auth_password_hint"
                        android:inputType="textPassword"
                        android:textColor="@color/brand_on_surface"
                        android:textColorHint="@color/brand_on_surface"
                        android:textSize="16sp"
                        android:padding="0dp" />
                </LinearLayout>
            </LinearLayout>

            <!-- Confirm Password Input Section (for registration) -->
            <LinearLayout
                android:id="@+id/confirmPasswordGroup"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginBottom="24dp"
                android:visibility="gone">

                <TextView
                    android:id="@+id/confirmPasswordLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/auth_confirm_password_label"
                    android:textColor="@color/brand_on_surface"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:textAllCaps="true"
                    android:letterSpacing="0.05" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:background="@drawable/bg_phone_input"
                    android:padding="16dp"
                    android:layout_marginTop="12dp">

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@android:drawable/ic_lock"
                        android:contentDescription="@string/auth_confirm_password_label"
                        app:tint="@color/brand_primary"
                        android:layout_marginEnd="12dp" />

                    <EditText
                        android:id="@+id/etConfirmPassword"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@android:color/transparent"
                        android:hint="@string/auth_confirm_password_hint"
                        android:inputType="textPassword"
                        android:textColor="@color/brand_on_surface"
                        android:textColorHint="@color/brand_on_surface"
                        android:textSize="16sp"
                        android:padding="0dp" />
                </LinearLayout>
            </LinearLayout>

            <!-- Primary Action Button -->
            <Button
                android:id="@+id/btnPrimaryAction"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_primary_button"
                android:text="@string/auth_sign_in"
                android:textColor="@android:color/white"
                android:textSize="16sp"
                android:textStyle="bold"
                android:padding="16dp"
                android:elevation="8dp" />

            <!-- Toggle Mode Button -->
            <Button
                android:id="@+id/btnToggleMode"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:background="@android:color/transparent"
                android:text="@string/auth_switch_to_register"
                android:textColor="@color/brand_primary"
                android:textSize="14sp" />

            <!-- Status Container -->
            <LinearLayout
                android:id="@+id/statusContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="18dp"
                android:background="@drawable/bg_status_container"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:padding="16dp"
                android:visibility="gone">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:alpha="0.9"
                    android:contentDescription="@string/auth_error_network"
                    android:src="@android:drawable/ic_dialog_alert" />

                <TextView
                    android:id="@+id/statusText"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="12dp"
                    android:layout_weight="1"
                    android:textColor="@color/brand_on_error"
                    android:textSize="14sp" />
            </LinearLayout>

            <!-- Progress Bar -->
            <ProgressBar
                android:id="@+id/progressBar"
                style="?android:attr/progressBarStyleLarge"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="24dp"
                android:indeterminateTint="@color/brand_primary"
                android:visibility="gone" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>
